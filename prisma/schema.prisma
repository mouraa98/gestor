datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  balance   Float    @default(0) // Adicione esta linha
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id              Int      @id @default(autoincrement())
  type            String
  description     String
  amount          Float
  installment     Boolean
  installmentCount Int?
  valorParcela    Float?   // Valor FIXO da parcela
  valorPago       Float?   // Total j√° pago
  status          String   @default("pendente")
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  parcelasPagas   ParcelaPaga[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ParcelaPaga {
  id            Int      @id @default(autoincrement())
  itemId        Int      // ID do item associado
  item          Item     @relation(fields: [itemId], references: [id])
  dataPagamento DateTime @default(now()) // Data em que a parcela foi paga
  valorPago     Float    // Valor pago na parcela
}