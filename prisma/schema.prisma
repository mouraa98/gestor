datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  items     Item[]   // Relação com os itens
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id              Int      @id @default(autoincrement())
  type            String   // Entrada, Saída, Dívida
  description     String
  amount          Float
  installment     Boolean  // Se é parcelado
  installmentCount Int?    // Número de parcelas
  userId          Int      // ID do usuário associado
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
